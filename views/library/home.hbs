{{#if hasLibros}}
<section class="py-2 text-center container">
  <div class="row py-lg-2">
    <div class="col-lg-6 col-md-8 mx-auto">
      <h1 class="fw-light">library</h1>
      <p class="lead text-muted">...</p>

    </div>
  </div>
</section>

<div class="album py-1 mb-2 bg-tertiary border border-danger rounded-4 shadow-lg">
  <div class="container mt-2 mb-2">
    <div class="row">
      <!-- Filtro por Nombre de Pokémon -->
      <div class="col-lg-6 col-md-6">
        <form method="get" action="/Filtro-name" class="d-flex" role="search">
          <input class="form-control me-2" name="Filtro" type="search" placeholder="Buscar libro"
            aria-label="Buscar Pokémon">
          <button class="btn btn-outline-primary" name="btnBuscar" type="submit">Buscar</button>
        </form>
      </div>

      <!-- Filtro por Región -->
      <div class="col-lg-6 col-md-6">
        <form method="get" action="/Filtro-Tipo" class="d-flex" role="search">
          <div class="dropdown">
            <button class="btn btn-success dropdown-toggle" type="button" id="dropdownMenuButton"
              data-bs-toggle="dropdown" aria-expanded="false">
              Filtrar por Categoría
            </button>
            <ul class="dropdown-menu p-3" aria-labelledby="dropdownMenuButton">
              {{#each Categoria as |R|}}
              <li>
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" name="Tipo[]" value="{{R.Nombre}}"
                    id="category-{{R.Nombre}}">
                  <label class="form-check-label" for="category-{{R.Nombre}}">
                    {{R.Nombre}}
                  </label>
                </div>
              </li>
              {{/each}}
            </ul>
          </div>

          <button class="btn btn-outline-success" name="btnCategory" type="submit">Filtro</button>
        </form>

      </div>
    </div>
  </div>
</div>



<div class="album py-5 bg-body-tertiary border border-danger rounded-4 shadow-lg">
  <div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">
      {{#each libros as |T|}}
      <div class="col">
        <div class="card shadow-sm border-danger rounded-4" style="background-color: #151313;">
          <!-- Imagen del Pokémon -->
          <img src="{{T.imagenLibro}}" class="card-img-top img-responser border-bottom border-dark"
            style="height: 225px; object-fit: cover;" alt="Libro Image">
          <div class="card-body text-light">
            <h5 class="card-title text-center border-bottom pb-2"> {{T.Titulo}} </h5>
            <p class="card-text"><strong>Año:</strong> {{T.AñoPublicacion}} </p>
            <p class="card-text"><strong>Categoria:</strong> {{T.Categoria}} </p>
            <p class="card-text"><strong>Autor:</strong> {{T.Autor}} </p>
            <p class="card-text"><strong>Editoril:</strong> {{T.Editorial}} </p>

          </div>
           <div class="d-flex justify-content-between align-items-center mt-3">
            <form class="form-inline" method="get" action="/libro">
                  <input type="hidden" name="AutorId" value="{{T.Id}}">
                <button type="submit" id="DetalleBtn-{{T.Id}}" class="btn btn-sm btn-outline-success">Detalle</button>


                </form>
           </div>
          
        </div>
        
      </div>
      {{/each}}
    </div>
  </div>

</div>

{{else}}
<h1>No hey libros</h1>
{{/if}}